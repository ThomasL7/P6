{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double", { "avoidEscape": true }],
    "object-curly-newline": "off",
    "comma-dangle": ["off"],
    "react/jsx-curly-brace-presence": "off",
    "operator-linebreak": "off",
    "react/jsx-one-expression-per-line": "off",
    "max-len": ["error", { "code": 500, "ignoreUrls": true, "ignoreStrings": true, "ignoreTemplateLiterals": true, "ignoreComments": true }]
  }
}
